#!/usr/bin/env bash

#     _    _
#    / \  | | __ _ _ __  _ __      Alann Santos
#   / _ \ | |/ _` | '_ \| '_ \     https://gitlab.com/alannssantos
#  / ___ \| | (_| | | | | | | |
# /_/   \_\_|\__,_|_| |_|_| |_|

## Cores.
Cor=("\033[0m"
  "\033[1;31m"
  "\033[1;32m"
  "\033[1;33m"
  "\033[1;34m"
  "\033[1;35m"
  "\033[1;36m"
  "\033[1;37m")

## Mensagens

Sussesso="${Cor[3]}
╭────────────────────────╮
│${Cor[2]} Instalado com sucesso!${Cor[3]} │
╰────────────────────────╯
${Cor[0]}"
Fracasso="${Cor[3]}
╭────────────────────────╮
│  ${Cor[1]} Erro na instalação!${Cor[3]}  │
╰────────────────────────╯
${Cor[0]}"

## Funções
Sistema() {
  #### Aplicativos e Drivers Pos-instalação.
  sudo apt install \
    bat \
    exa \
    fzf \
    mpv \
    npm \
    cups \
    curl \
    lynx \
    foot \
    tmux \
    atool \
    cmake \
    sshfs \
    zsync \
    fdfind \
    mcomix \
    concalc \
    skanpage \
    xsensors \
    alacritty \
    arc-theme \
    pkg-config \
    streamlink \
    zlib1g-dev \
    python3-dev \
    libxtst-dev \
    font-manager \
    python3-full \
    libgtk-3-dev \
    gvfs-backends \
    poppler-utils \
    fonts-firacode \
    libfreetype6-dev \
    libxkbcommon-dev \
    paper-icon-theme \
    ffmpegthumbnailer \
    libfontconfig1-dev \
    libxcb-xfixes0-dev \
    papirus-icon-theme \
    python3-libtorrent \
    printer-driver-all \
    breeze-cursor-theme \
    libjpeg62-turbo-dev \
    libimage-exiftool-perl \
    software-properties-common -y &&
    sudo apt-add-repository contrib non-free &&
    sudo apt upgrade -y &&
    npm config set prefix "$HOME/.local" &&
    python3 -m venv "$HOME/.local" &&
    pip3 install yt-dlp &&
    pip3 install pyperclip &&
    pip3 install comicthumb &&
    pip3 install gallery-dl &&
    echo -e "${Cor[4]}\nSistema!${Cor[0]}" &&
    echo -e "$Sussesso" ||
    echo -e "$Fracasso"
}

Configs() {
  #### Dependencias.
  sudo apt install cmake curl wget &&
    #### Copiar Dotfiles e Plugins.
    cp -r -v .config .irssi .bash_aliases .nanorc .Xresources ~/ &&
    echo -e "${Cor[4]}\nCopiando arquivos de configuração...${Cor[0]}" &&
    echo -e "$Sussesso" ||
    echo -e "$Fracasso"

  #### AppImage Package (AppMan)
  curl https://raw.githubusercontent.com/ivan-hc/AM/main/APP-MANAGER --create-dirs --output ~/.local/bin/appman &&
    chmod a+x ~/.local/bin/appman &&
    echo -e "${Cor[4]}\nAppImage Package (AppMan).${Cor[0]}" &&
    echo -e "$Sussesso" ||
    echo -e "$Fracasso"

  #### Transmission TUI.
  git clone https://github.com/tremc/tremc.git /tmp/tremc && sudo make -C /tmp/tremc/ install &&
    echo -e "${Cor[4]}\nTransmission TUI.${Cor[0]}" &&
    echo -e "$Sussesso" ||
    echo -e "$Fracasso"

  #### Nerd Fonts.
  mkdir -vp "$HOME/.local/share/fonts/FiraCode"
  wget -c "https://github.com/ryanoasis/nerd-fonts/releases/latest/download/FiraCode.tar.xz" -P /tmp/ &&
    tar -xf /tmp/FiraCode.tar.xz -C "$HOME/.local/share/fonts/FiraCode"
  echo -e "${Cor[4]}\nNerd Fonts.${Cor[0]}" &&
    echo -e "$Sussesso" ||
    echo -e "$Fracasso"
}

OpInvalido() {
  clear
  echo -e "${Cor[3]}

  ╭────────────────────────╮
  │${Cor[1]}   Opção desconhecida.${Cor[3]}  │
  ╰────────────────────────╯
${Cor[0]}"
}

Menu() {
  echo -e "${Cor[4]}
  1.Dotfiles
  2.Sistema
${Cor[1]}
  q.Sair
${Cor[0]}"
  read -r Resposta

  case "$Resposta" in
  1)
    Configs
    Menu
    ;;
  2)
    Sistema
    Menu
    ;;
  q)
    exit
    ;;
  *)
    OpInvalido
    Menu
    ;;
  esac
}
Menu
