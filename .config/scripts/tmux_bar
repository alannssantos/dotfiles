    s/.*Uploading.*/ğŸ“¤/
    s/ .* (.*%).*Up & Down.*/ğŸ“¥[\1]/
    s/ .* (.*%).*Downloading.*/ğŸ“¥[\1]/' \
  | sort \
  | uniq -c \
  | sed -r 's/ //g
    s/(.*ğŸ”´.*)/#[fg=colour1] \1/
    s/(.*â—.*)/#[fg=colour5] \1/
    s/(.*âŒ›ï¸.*)/#[fg=colour11] \1/
    s/(.*ğŸŒ±.*)/#[fg=colour71] \1/
    s/(.*âœ….*)/#[fg=colour71] \1/
    s/(.*ğŸ“¤.*)/#[fg=colour71] \1/
    s/.*(ğŸ“¥.*$)/#[fg=colour4] \1/' \
  | sed ':a;$!N;s/\n//;ta;' \
  | sed 's/^/ #[fg=colour71]â”ƒ/')
echo -n "$Torrent"
#### â”â”â”â”â”â”â”â”â”â”â”â” # }}}
# {{{ #### Mpc Player
Player=$(mpc -f "[[%artist% â”ƒ ]%title%]|[%file$]" 2>/dev/null \
  | sed -r '/^volume:|^\[playing\]|^\[paused\]/d
    s/(.* )â”ƒ( .*)/ #[fg=colour71]â”ƒ ğŸµ \1-#[fg=colour5]\2/')
echo -n "$Player"
#### â”â”â”â”â”â”â”â”â”â” # }}}
# {{{ #### Temperatura CPU
Temp=$(sensors | sed -r '/Package id 0:/!d;s/.*\+(.*)\..Â°C *\(.*$/ #[fg=colour71]â”ƒ \1Â°C/')
echo -n "$Temp"
#### â”â”â”â”â”â”â”â”â”â”â”â”â”â”â” # }}}
}

