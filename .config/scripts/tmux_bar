#!/usr/bin/env bash

tmux_bar(){
# {{{ #### Transmission
Torrent=$(transmission-remote -l \
  | sed -r '/%|Unknown/!d
    s/.*Verifying.*/âŒ›ï¸/
    s/.*Seeding.*/ğŸŒ±/
    s/.*Stopped.*/ğŸ”´/
    s/.*100%.*/âœ…/
    s/.*Idle.*/âŒ›ï¸/
