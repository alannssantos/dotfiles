#!/usr/bin/env bash

# Tela de ajuda.
info(){
echo -e "Uso: info-xfce4-panel [OPÃ‡ÃƒO]

\t-d, --dolar\tmostra o cotaÃ§Ã£o atual do dolar
}

# CotaÃ§Ã£o do dolar
dolar(){
	dolar=$(wget -qO- "https://dolarhoje.com/" \
		| sed -r '/id="nacional"/!d
			s/^.*id="nacional" value="(.*)"\/><\/span>.*$/R$ \1 ðŸ’¸/')

	echo "<txt>$dolar</txt>"
	echo "<tool>DÃ³lar Hoje</tool>"
}

case "$1" in
	-d|--dolar)
		dolar ;;
	*)
		info ;;
esac
