#!/usr/bin/env bash

#     _    _
#    / \  | | __ _ _ __  _ __      Alann Santos
#   / _ \ | |/ _` | '_ \| '_ \     https://github.com/alannssantos
#  / ___ \| | (_| | | | | | | |
# /_/   \_\_|\__,_|_| |_|_| |_|

# Varialvel de Client Torrent.
Programa="transmission-remote -a"
#Programa="qbittorrent --skip-dialog=true --sequential"

# O site que vai ser usado.
Site="https://1337x.to"

# Tratando a pesquisa.
Pesquisa="$*"

# Definindo se vai pesquisar ou olhar o top 100.
if [ -z "$Pesquisa" ] ; then
	Url="$Site/top-100"
else
	Url="$Site/search/$Pesquisa/1/"
fi

# A magica.
Resultados=$(wget -qO- "$Url" \
	| sed -r '/<td class=\"coll-[0-4]/!d
		s/^.*leeches">(.*)<.*$/\1/
		s/^.*mob-[a-z].*">(.*)<span.*$/\1/
		s/^.*seeds">(.*)<.*$/\1/
		s/^.*href=\"(\/torrent.*)\">(.*)<\/a>.*$/\2â”ƒ\1/' \
	| sed  'N;N;N;s!\n!â”ƒ!g' \
	| awk -F 'â”ƒ' '{print $2"ð¤­¢â”ƒ" "\033[1;36mðŸ’¾"$5 "ð¤­¢\033[1;33m"$1 "ð¤­¢\033[1;32mðŸŒ±"$3 "ð¤­¢\033[1;31mðŸ”½"$4}' \
	| column -t -s "ð¤­¢" \
	| fzf -e -m --border --ansi --delimiter "â”ƒ" --with-nth='2..' --prompt=1337x: \
	| sed 's/ *â”ƒ.*$//')

if [ ! -z "$Resultados" ]; then
	for Resultado in $Resultados
		do
		$Programa "$(wget -qO- "$Site$Resultado" \
			| sed -r '/Magnet Download/!d
					s/^.*href=\"(.*)\".*$/\1/')"
		done
fi
