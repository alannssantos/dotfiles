#!/usr/bin/env bash

transmission(){
  # {{{ #### Transmission
  Torrent=$(transmission-remote 192.168.0.132:9091 -l |
    sed -r '/%|Unknown/!d
    s/.*Verifying.*/‚åõÔ∏è/
    s/.*Seeding.*/üå±/
    s/.*Stopped.*/üî¥/
    s/.*100%.*/‚úÖ/
    s/.*Idle.*/‚åõÔ∏è/
    s/.*Unknown.*/‚ùó/
    s/.*Uploading.*/üì§/
    s/ .* (.*%).*Up & Down.*/üì•[\1]/
    s/ .* (.*%).*Downloading.*/üì•[\1]/' |
    sort |
    uniq -c |
    sed -r 's/ //g
    s/(.*üî¥.*)/#[fg=colour1]\1/
    s/(.*‚ùó.*)/#[fg=colour5]\1/
    s/(.*‚åõÔ∏è.*)/#[fg=colour11]\1/
    s/(.*üå±.*)/#[fg=colour71]\1/
    s/(.*‚úÖ.*)/#[fg=colour71]\1/
    s/(.*üì§.*)/#[fg=colour71]\1/
    s/.*(üì•.*$)/#[fg=colour4]\1/' |
    sed ':a;$!N;s/\n//;ta;' |
    sed 's/^/#[fg=colour71]‚îÉ /')
  echo -n "$Torrent "
  #### ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ # }}}
}

mpcplayer() {
  # {{{ #### Mpc Player
  Player=$(mpc -f "[[%artist% ‚îÉ ]%title%]|[%file$]" 2>/dev/null |
    sed -r '/^volume:|^\[playing\]|^\[paused\]/d
    s/(.* )‚îÉ( .*)/#[fg=colour71]‚îÉ üéµ \1-#[fg=colour5]\2/')
  echo -n "$Player "
  #### ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ # }}}
}

cputemperature(){
  # {{{ #### Temperatura CPU
  Temp=$(sensors |
    sed -r '/Package id 0:/!d
      s/.*\+(.*)\..¬∞C *\(.*$/\1/')
  echo -n "#[fg=colour71]‚îÉ #[fg=colour11]$Temp¬∞C "
  #### ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ # }}}
}

battery() {
  Status=$(awk '{print $1}' /sys/class/power_supply/BAT*/status)
  Percentage=$(awk '{print $1}' /sys/class/power_supply/BAT*/capacity)
  Percentage=$(printf "%02d\n" "$Percentage")
  Icon=("#[fg=colour1]Û∞ÇÉ" "#[fg=colour1]Û∞Å∫" "#[fg=colour11]Û∞Åª" "#[fg=colour11]Û∞Åº" "#[fg=colour71]Û∞ÅΩ" "#[fg=colour71]Û∞Åæ" "#[fg=colour71]Û∞Åø" "#[fg=colour4]Û∞ÇÄ" "#[fg=colour4]Û∞ÇÅ" "#[fg=colour4]Û∞ÇÇ" "#[fg=colour4]Û∞Åπ")
  IconCharging=("#[fg=colour1]Û∞¢ú" "#[fg=colour1]Û∞¢ú" "#[fg=colour11]Û∞ÇÜ" "#[fg=colour11]Û∞Çá" "#[fg=colour71]Û∞Çà" "#[fg=colour71]Û∞¢ù" "#[fg=colour71]Û∞Çâ" "#[fg=colour4]Û∞¢û" "#[fg=colour4]Û∞Çä" "#[fg=colour4]Û∞Çã" "#[fg=colour4]Û∞ÇÖ")
  [ "$Status" = Full ] &&
    echo -n "#[fg=colour71]‚îÉ ${Icon[${Percentage%[0-9]}]} $Percentage% "
  [ "$Status" = Charging ] &&
    echo -n "#[fg=colour71]‚îÉ ${IconCharging[${Percentage%[0-9]}]} $Percentage% "
  [ "$Status" = Discharging ] &&
    echo -n "#[fg=colour71]‚îÉ ${Icon[${Percentage%[0-9]}]} $Percentage% "
}

update() {
  Update=$(apt list --upgradable 2>/dev/null | sed '/\//!d' | wc -l)
  [ "$Update" = 0 ] &&
    echo -n "" ||
    echo -n "#[fg=colour71]‚îÉ #[fg=colour11]Update:$Update "
}

help() {
	echo "
Usage: info-tmux-panel [OPTIONS]

Options:                                                                                                                                               
  General Options:                                                                                                                                     
    -u, --update              Mostra se os pacotes do sistema est√£o atualizado.
                              Para que o update funcione corretamente coloque esta linha no crontab.
                              (*/30 * * * * root /usr/bin/apt update >/dev/null 2>&1).

    -c, --cputemperature      Mostra a temperatura atual do Processador.
    -t, --transmission        Mostra o trafego no transmission.
    -m, --mpcplayer           Mostra a o que est√° tocando no MPC.
    -b, --battery             Mostra o nivel da bateria do notebook."
}

case "$1" in
--battery | -[Bb])
	battery
  ;;
--mpcplayer | -[Mm])
	mpcplayer
  ;;
--cputemperature | -[Cc])
	cputemperature
  ;;
--tramsmission | -[Tt])
	transmission
  ;;
--update | -[Uu])
	update
  ;;
--help | *)
	help
	;;
esac
